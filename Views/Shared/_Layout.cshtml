<!DOCTYPE html>
 
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buffteks Project Management Tool</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0/minty/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Cookie">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.10.0/css/lightbox.min.css">
    <link rel="stylesheet" href="/wwwroot/css/Pretty-Footer.css">
    <link rel="stylesheet" href="/wwwroot/css/styles.css">
</head>

<body style="background-color:rgb(88, 24, 24)">
    
    
    <!-- Header -->
    <header>
        <img src="~/images/buffteks-logo.png" id="logo">
    </header>
    <!-- End of Header -->
 
    <!-- Content Body -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1.5">
                    <nav>
                        <h3>Navigation</h3>
                        <li><a class="btn btn-outline-primary btn-sm" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <p></p>
                        <li><a class="btn btn-outline-primary btn-sm"asp-area="" asp-controller="Members" asp-action="Index">Members</a></li>
                        <p></p>
                        <li><a class="btn btn-outline-primary btn-sm"asp-area="" asp-controller="Clients" asp-action="Index">Clients</a></li>
                        <p></p>
                        <li><a class="btn btn-outline-primary btn-sm"asp-area="" asp-controller="Projects" asp-action="Index">Projects</a></li>                                                            
                        <p></p>
                        <li><a class="btn btn-outline-primary btn-sm"asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <p></p>
                        <li><a class="btn btn-outline-primary btn-sm"asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </nav>
                </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
	    </div>
    </div> 


    <!-- End of Content Body -->
 
    <!-- Footer -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 footer-navigation">
                    <h3><img src="~/images/Logo_white_small.png" id="logo"></h3>
                    <p class="links"><a href="#">Home</a><strong> · </strong><a href="#">Register</a><strong> · </strong><a href="Members">Members</a><strong> · </strong><a href="Clients">Clients</a><strong> · </strong><a href="Projects">Projects</a><strong>  </strong></p>
                    
                    
                </div>
                <div class="col-sm-6 col-md-4 footer-contacts">
                                        <h4>About Buffteks</h4>
                    <div><span class="fa fa-map-marker footer-contacts-icon"> </span>
                        <p><span class="new-line-span">2501 4th Ave</span><span> Canyon, TX</p>
                    </div>
                    <div><span class="fa fa-phone footer-contacts-icon"></span>
                        <p><span class="footer-center-info email text-left"> +1 555 123456</span></p>
                    </div>
                    <div><i class="fa fa-envelope footer-contacts-icon"></i>
                        <p> <a href="#" target="_blank">support@company.com</a></p>
                        <p class="company-name">Buffteks © 2018</p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-4 footer-about">
                    <img src="~/images/buffalo.png" id="logo">
                    <p> <a href="https://plus.google.com/communities/103786778853722637637" target="_blank">https://plus.google.com/communities/103786778853722637637</a> </p>
                </div>
            </div>
        </div>
    </footer>
 
    <!-- Style -->
    <style>
        header {
            height: 100px;
            width: 100%;
            background-color:rgb(88, 24, 24);
        }
 
        nav {
            float: left;
            width: auto;

            height: 100%; 
            background-color: rgba(88, 24, 24, 0.116);
            padding: 20px;
        }
 
        .content {

            background-color: rgb(255, 255, 255);
            
            width: 100%;
            min-height: auto;
            padding: 5px;
        }
 
        footer {
            background-color: rgb(88, 24, 24);
            width: 100%;
            height: 100%;
            padding-top: 20px;
            text-align: center;

        }
    </style>
    
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)

</body>
</html>